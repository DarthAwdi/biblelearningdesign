    <script>
        let unlockedDays = 0;
        let correctAnswers = 0;
        const totalDays = 7;
        const totalQuestions = 3;

        document.querySelectorAll('.day-card').forEach(function(card) {
            card.addEventListener('click', function() {
                if (!this.classList.contains('unlocked')) {
                    this.classList.add('unlocked');
                    unlockedDays++;
                    updateProgress();
                }
            });
        });

        document.querySelectorAll('.quiz-option').forEach(function(option) {
            option.addEventListener('click', function() {
                const questionNum = this.getAttribute('data-question');
                const isCorrect = this.getAttribute('data-correct') === 'true';
                const feedback = document.getElementById('feedback' + questionNum);
                const allOptions = document.querySelectorAll('[data-question="' + questionNum + '"]');
                
                allOptions.forEach(function(opt) {
                    opt.style.pointerEvents = 'none';
                });

                if (isCorrect) {
                    this.classList.add('correct');
                    feedback.textContent = 'üéâ Awesome! That\'s right!';
                    feedback.classList.add('success', 'show');
                    correctAnswers++;
                } else {
                    this.classList.add('incorrect');
                    feedback.textContent = 'üí≠ Not quite! Try reading that day again.';
                    feedback.classList.add('error', 'show');
                }

                updateProgress();
                checkCompletion();
            });
        });

        function updateProgress() {
            const totalProgress = unlockedDays + correctAnswers;
            const maxProgress = totalDays + totalQuestions;
            const percentage = Math.round((totalProgress / maxProgress) * 100);
            
            const progressBar = document.getElementById('progressBar');
            progressBar.style.width = percentage + '%';
            progressBar.textContent = percentage + '%';
        }

        function checkCompletion() {
            if (unlockedDays === totalDays && correctAnswers === totalQuestions) {
                setTimeout(function() {
                    document.getElementById('badgeContainer').classList.add('show');
                }, 500);
            }
        }

        updateProgress();
    </script>
